  <style>
    /* Define the colors of the Cameroonian flag */
    :root {
      --cameroon-green: #008000;
      --cameroon-red: #FF0000;
      --cameroon-yellow: #FFD700;
    }

    /* General styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Header styling */
    header {
      background-color: var(--cameroon-green);
      padding: 20px;
      color: white;
    }

    /* Navigation styling */
    nav {
      background-color: var(--cameroon-red);
      color: white;
      padding: 10px;
    }

    .logo-img {
      max-width: 100%;
      height: auto;
      max-height: 60px; /* Adjust the value as needed */
    }

    .navbar-nav {
      color: #f0f0f0;
    }

    .navbar-nav .nav-link {
      color: #f0f0f0;
      font-weight: bolder;
      transition: all 0.3s ease-in-out;
    }

    .navbar-nav .nav-link:hover,
    .navbar-nav .nav-link:focus {
      background-color: var(--cameroon-green);
    }

    a.btn-customized-2 {
      margin-left: 5px;
      margin-right: 5px;
      padding: .75rem 1.5rem;
      background: #fff;
      border: 0;
      border-radius: 4px;
      font-size: 16px;
      font-weight: 300;
      color: #555;
      box-shadow: none;
    }

    a.btn-customized-2:hover,
    a.btn-customized-2:active,
    a.btn-customized-2:focus,
    a.btn-customized-2:active:focus,
    a.btn-customized-2.active:focus,
    a.btn-customized-2.btn.btn-primary:not(:disabled):not(.disabled):active,
    a.btn-customized-2.btn.btn-primary:not(:disabled):not(.disabled):active:focus {
      outline: 0;
      background: red;
      border: 0;
      color: white;
      box-shadow: none;
    }

    /* Hero section styling */
    .hero {
      background-image: url('images/2.jpg');
      background-size: cover;
      background-position: center;
      padding: 80px 20px;
      text-align: center;
    }

    .hero h2 {
      color: white;
      font-weight: 600;
      text-transform: uppercase;
    }

    .hero p {
      color: green;
      margin-top: 20px;
      font-size: 24px;
      font-weight: 100;
    }

    /* Key features section styling */
    .key-features {
      background-color: var(--cameroon-yellow);
      padding: 40px;
      text-align: center;
    }

    .key-features h2 {
      color: var(--cameroon-red);
      font-weight: 600;
      text-transform: uppercase;
    }

    /* Upcoming events section styling */
    .upcoming-events {
      background-color: #f0f0f0;
      padding: 40px;
    }

    .upcoming-events h2 {
      color: var(--cameroon-red);
      font-weight: 600;
    }

    /* Latest news section styling */
    .latest-news {
      background-color: #fff;
      padding: 40px;
    }

    .latest-news h2 {
      color: var(--cameroon-red);
      font-weight: 600;
    }

    /* Branches section styling */
    .branches {
      background-color: var(--cameroon-green);
      padding: 40px;
      color: white;
    }

    .branches h2 {
      color: var(--cameroon-red);
      font-weight: 600;
    }

    /* Testimonials section styling */
    .testimonials {
      background-color: #f0f0f0;
      padding: 40px;
    }

    .testimonials h2 {
      color: var(--cameroon-red);
      font-weight: 600;
    }

    /* Footer styling */
    footer {
      background-color: var(--cameroon-red);
      color: white;
      padding: 20px;
      text-align: center;
    }

    footer a {
      color: white;
      text-decoration: none;
    }
