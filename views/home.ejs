        <script>
            document.getElementById('newsletter-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const emailInput = document.querySelector('[name="email"]');
            const email = emailInput.value.trim();

            if (!email) {
                displayMessage(null, 'Email is required', 'error');
                return;
            }

            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/newsletter', true);
            xhr.setRequestHeader('Content-Type', 'application/json');

            xhr.onload = function() {
                if (xhr.status === 200) {
                const response = JSON.parse(xhr.responseText);
                displayMessage(response.message, response.error, 'success');
                } else {
                const response = JSON.parse(xhr.responseText);
                displayMessage(response.message, response.error, 'error');
                }

                // Remove the message after 5 seconds (5000 milliseconds)
                setTimeout(function() {
                removeMessage();
                }, 5000);
            };

            xhr.onerror = function() {
                displayMessage(null, 'Oops! Something went wrong. Please try again later.', 'error');
            };

            xhr.send(JSON.stringify({ email }));
            });

            function displayMessage(message, error, type) {
            const messageContainer = document.getElementById('newsletter-message');
            messageContainer.classList.remove('text-danger', 'text-success');

            if (type === 'error') {
                messageContainer.classList.add('text-danger');
            } else if (type === 'success') {
                messageContainer.classList.add('text-success');
            }

            messageContainer.textContent = message || error || '';
            }

            function removeMessage() {
            const messageContainer = document.getElementById('newsletter-message');
            messageContainer.textContent = '';
            }

        </script> 
